<h3>Thêm khóa học</h3>

<div class="mt-4">
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" aplaceholder="Enter name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" aplaceholder="Enter description" name="description">
        </div>
        <div class="form-group">
            <label for="videoId">VideoId</label>
            <input type="text" class="form-control" id="videoId" aplaceholder="Enter videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" class="form-control" id="level" aplaceholder="Enter name" name="level">
        </div>
      
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>